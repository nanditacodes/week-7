<% if task.due_date < 1.day.from_now %>
  <tr id="row<%=task.id%>">
    <td><%= task.title %></td>
    <td><%= task.due_date.strftime("%m/%d/%Y") %></td>
    <td><%= link_to "Done", task, method: :delete, remote: true, style: "width: 100px", class:"btn btn-primary btn-sm btn-block button-width", "data-confirm"=> "Are you sure?"%></td>
  </tr>
<% end %>
